{
    "name": "project",
    "version": "0.1.0",
    "contributors": [
        "Milan Adamovsky <milan.adamovsky@gmail.com> (https://github.com/adamovsky/scaffold.git)"
    ],
    "private": true,
    "dependencies": {
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.1",
        "recoil": "^0.7.3-alpha"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "storybook": "start-storybook -p 6006 -s public,.storybook/static",
        "build-storybook": "build-storybook -s public,.storybook/static",
        "prepare": "git config --local core.hooksPath .githooks || echo 'Can not set git hooks'",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
        "lint:coverage": "eslint-output --max-warnings 5 --color .",
        "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx --fix ./src",
        "format": "prettier --check  \"src/**/*.{js,jsx,ts,tsx}\"",
        "format:fix": "prettier --write  \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "plugins": [
            "sort-keys-fix"
        ],
        "rules": {
            "sort-keys-fix/sort-keys-fix": [
                1,
                "asc",
                {
                    "natural": true
                }
            ],
            "react/jsx-newline": [
                2,
                {
                    "prevent": false
                }
            ],
            "react/jsx-sort-props": [
                1,
                {
                    "multiline": "first"
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_",
                    "varsIgnorePattern": "^_",
                    "caughtErrorsIgnorePattern": "^_"
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "engines": {
        "pnpm": ">=7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@storybook/addon-actions": "^6.4.22",
        "@storybook/addon-essentials": "^6.4.22",
        "@storybook/addon-links": "^6.4.22",
        "@storybook/builder-webpack5": "^6.4.22",
        "@storybook/manager-webpack5": "^6.4.22",
        "@storybook/node-logger": "^6.4.22",
        "@storybook/preset-create-react-app": "^4.1.0",
        "@storybook/react": "^6.4.22",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.1.1",
        "@testing-library/user-event": "^14.1.1",
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "eslint-output": "^3.0.1",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "sass": "^1.51.0"
    }
}
